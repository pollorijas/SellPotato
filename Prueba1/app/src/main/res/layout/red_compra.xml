<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/Prueba1"
    android:clickable="false"
    android:background="#ffffffff">


    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="91dp"
            android:layout_gravity="right|top">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView3"
                android:src="@drawable/wp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView5"
                android:src="@drawable/rc"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="398dp"
            android:layout_gravity="center">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Monto a Pagar:"
                android:id="@+id/textView17"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:id="@+id/txttotal"
                android:layout_alignBottom="@+id/textView17"
                android:layout_toRightOf="@+id/textView17"
                android:layout_toEndOf="@+id/textView17"
                android:layout_marginLeft="44dp"
                android:layout_marginStart="44dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Rut"
                android:id="@+id/textView38"
                android:layout_below="@+id/txttotal"
                android:layout_toRightOf="@+id/textView17"
                android:layout_toEndOf="@+id/textView17" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="phone"
                android:ems="10"
                android:id="@+id/etxrut"
                android:layout_below="@+id/textView38"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="NÂ° Tarjeta"
                android:id="@+id/textView39"
                android:layout_below="@+id/etxrut"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="30dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:ems="10"
                android:id="@+id/etxtarjeta"
                android:layout_below="@+id/textView39"
                android:layout_alignLeft="@+id/etxrut"
                android:layout_alignStart="@+id/etxrut" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anular"
                android:id="@+id/btnanular"
                android:layout_marginTop="54dp"
                android:layout_below="@+id/etxtarjeta"
                android:layout_alignLeft="@+id/etxtarjeta"
                android:layout_alignStart="@+id/etxtarjeta" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pagar"
                android:id="@+id/btnpagar"
                android:layout_alignTop="@+id/btnanular"
                android:layout_toRightOf="@+id/txttotal"
                android:layout_toEndOf="@+id/txttotal" />


        </RelativeLayout>

    </FrameLayout>
</RelativeLayout>
